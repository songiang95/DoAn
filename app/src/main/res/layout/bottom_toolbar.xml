<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_toolbar"
    android:layout_alignParentBottom="true"
    android:background="@color/black_opacity_90"
    android:orientation="horizontal"
    >

    <ImageView
        android:background="@drawable/ripple_toolbar_item"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_menu_black_24dp"
        android:id="@+id/toolbar_nav"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/toolbar_item_padding"
        
        />
    <ImageView
        android:background="@drawable/ripple_toolbar_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/toolbar_search"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:padding="@dimen/toolbar_item_padding"
        />

    <ImageView
        android:background="@drawable/ripple_toolbar_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/toolbar_home"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_weight="1"
        android:padding="@dimen/toolbar_item_padding"
        />
    <ImageView
        android:background="@drawable/ripple_toolbar_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/toolbar_change_mode"
        android:src="@drawable/ic_apps_black_24dp"
        android:layout_weight="1"
        android:padding="@dimen/toolbar_item_padding"

        />
    <ImageView
        android:background="@drawable/ripple_toolbar_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/toolbar_favorite"
        android:src="@drawable/ic_favorite_black_24dp"
        android:layout_weight="1"
        android:padding="@dimen/toolbar_item_padding"

        />

</LinearLayout>