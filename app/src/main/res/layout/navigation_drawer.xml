<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/navigation_bg"
    >

    <LinearLayout
        android:id="@+id/ll_read_ebook_offline"
        android:layout_width="@dimen/nav_item_width"
        android:layout_height="@dimen/nav_item_height"
        android:layout_marginLeft="@dimen/nav_item_margin_start"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="@dimen/nav_item_icon_width"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_black_24dp"
            />

        <TextView
            android:layout_marginLeft="@dimen/nav_item_tv_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_item_read_ebook"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_read_comic_offline"
        android:layout_width="@dimen/nav_item_width"
        android:layout_height="@dimen/nav_item_height"
        android:layout_marginLeft="@dimen/nav_item_margin_start"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/nav_item_icon_width"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_black_24dp" />

        <TextView
            android:layout_marginLeft="@dimen/nav_item_tv_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_item_read_comic"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16sp" />
    </LinearLayout>

</LinearLayout>